--- 
// src/components/Projects.astro
import projects from '../data/projects.js';
---

<section id="projects" class="py-16 bg-gray-900">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-8 text-white">Projects</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {projects.map((project) => (
        <div class="bg-gray-800 p-6 rounded-lg shadow-lg">
          {project.image && (
            <img
              src={project.image}
              alt={project.title}
              class="w-full h-48 object-cover rounded-md mb-4"
            />
          )}
          <h3 class="text-xl font-semibold mb-2 text-white">{project.title}</h3>
          <p class="text-gray-300 mb-4">{project.shortDescription}</p>
          <a
            href={`/project/${project.id}`}
            class="text-blue-400 hover:underline"
          >
            View Details
          </a>
        </div>
      ))}
    </div>
  </div>
</section>