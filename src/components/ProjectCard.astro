---
interface Project {
  id: string;
  title: string;
  description: string;
  image: string;
  tech: string[];
  link: string | null;
}

interface Props {
  project: Project;
}

const { project } = Astro.props;
---

<div class="bg-gray-800 rounded-lg shadow-lg p-6 hover:shadow-xl transition-shadow duration-300">
  {project.link ? (
    <a href={project.link} class="block">
      <img
        src={project.image}
        alt={`${project.title} Thumbnail`}
        class="w-full h-48 object-cover rounded-lg mb-4"
      />
      <h3 class="text-2xl font-bold mb-2 text-white">{project.title}</h3>
      <p class="text-gray-300 mb-4">{project.description}</p>
      <div class="flex flex-wrap gap-2">
        {project.tech.map((tech) => (
          <span class="bg-gray-700 text-blue-400 px-3 py-1 rounded-full text-sm">{tech}</span>
        ))}
      </div>
      <span class="inline-block mt-4 text-blue-400 hover:underline">View Details â†’</span>
    </a>
  ) : (
    <div>
      <img
        src={project.image}
        alt={`${project.title} Thumbnail`}
        class="w-full h-48 object-cover rounded-lg mb-4"
      />
      <h3 class="text-2xl font-bold mb-2 text-white">{project.title}</h3>
      <p class="text-gray-300 mb-4">{project.description}</p>
      <div class="flex flex-wrap gap-2">
        {project.tech.map((tech) => (
          <span class="bg-gray-700 text-blue-400 px-3 py-1 rounded-full text-sm">{tech}</span>
        ))}
      </div>
    </div>
  )}
</div>