---
interface Project {
  id: string;
  title: string;
  description: string;
  image: string;
  tech: string[];
  link: string | null;
}

interface Props {
  project: Project;
}

const { project } = Astro.props;
---

<div class="bg-gray-800 rounded-lg shadow-xl p-6 hover:shadow-2xl transition-shadow duration-300">
  <a href={project.link} class="block">
    <div class="max-w-3xl mx-auto aspect-[4/3] bg-gray-700 rounded-lg p-4 mb-6">
      <img
        src={project.image}
        alt={`${project.title} Thumbnail`}
        class="w-full h-full object-contain"
      />
    </div>
    <h3 class="text-3xl font-bold mb-3 text-white">{project.title}</h3>
    <p class="text-gray-300 mb-6 text-lg">{project.description}</p>
    <div class="flex flex-wrap gap-3 mb-6">
      {project.tech.map((tech) => (
        <span class="bg-gray-700 text-blue-400 px-4 py-2 rounded-full text-sm">{tech}</span>
      ))}
    </div>
    <span class="inline-block text-blue-400 hover:underline text-lg font-semibold">View Details â†’</span>
  </a>
</div>