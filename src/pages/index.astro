---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import FeaturedProjectCard from '../components/FeaturedProjectCard.astro';
import ProjectCard from '../components/ProjectCard.astro';
import Contact from '../components/Contact.astro';
import projects from '../data/projects.js';

// Split projects: Prize Kingdoms as featured, others in the grid
const featuredProject = projects.find((project) => project.id === "prize-kingdoms");
const otherProjects = projects.filter((project) => project.id !== "prize-kingdoms");
---

<Layout title="Stormy Emery - Portfolio">
  <Header />
  <Hero
    name="Stormy Emery"
    tagline="Software Engineer & Unity Game Developer"
    bio="With nearly a decade of Unity expertise, I craft games from concept to live updates, specializing in full-stack feature development, performance optimization, and cross-team collaboration. Adaptable and detail-oriented, I’m passionate about driving gaming innovation."
  />
  <section id="projects" class="py-16 pt-16 bg-gradient-to-b from-gray-900 to-gray-800">
    <div class="container mx-auto px-4">
      <h2 class="text-4xl font-bold text-center mb-12 text-white">My Projects</h2>
      
      <!-- Featured Project (Prize Kingdoms) -->
      {featuredProject && (
        <div class="mb-16">
          <FeaturedProjectCard project={featuredProject} />
        </div>
      )}

      <!-- Grid of Other Projects -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {otherProjects.map((project) => (
          <ProjectCard project={project} />
        ))}
      </div>
    </div>
  </section>
  <Contact />
  <!-- Footer Section -->
  <footer class="bg-gray-900 py-6">
    <div class="container mx-auto px-4 text-center text-gray-300">
      <p class="text-sm mb-2">© 2025 Stormy Emery. All rights reserved.</p>
      <a
        href="javascript:void(0)"
        class="text-blue-400 hover:underline text-sm"
        onclick="window.scrollTo({ top: 0, behavior: 'smooth' })"
      >
      Back to Top
     </a>
    </div>
  </footer>
</Layout>